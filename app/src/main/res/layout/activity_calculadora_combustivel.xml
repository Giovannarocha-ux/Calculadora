<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculadoraCombustivel">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:onClick="goToMainActivity"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preço Gasolina" />

            <EditText
                android:id="@+id/editTextGasolina"
                android:layout_width="372dp"
                android:layout_height="47dp"
                android:ems="10"
                android:inputType="number|numberDecimal" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preço Alcool" />

            <EditText
                android:id="@+id/editTextAlcool"
                android:layout_width="372dp"
                android:layout_height="47dp"
                android:ems="10"
                android:inputType="number|numberDecimal" />

            <RadioGroup
                android:id="@+id/radioGroupCombustivel"
                android:layout_width="376dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButtonGasolina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="compararCombustiveis"
                    android:text="Gasolina" />

                <RadioButton
                    android:id="@+id/radioButtonAlcool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="compararCombustiveis"
                    android:text="Alcool" />
            </RadioGroup>

            <TextView
                android:id="@+id/textViewResultado"
                android:layout_width="301dp"
                android:layout_height="112dp"
                android:background="#E7E7E7"
                android:gravity="center"
                android:text="Resultado:" />

            <Button
                android:id="@+id/buttonLimpar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:onClick="limparCampos"
                android:text="Limpar campos" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>